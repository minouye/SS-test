<h1>Site#index</h1>
<p>Find me in app/views/site/index.html.erb</p>

  <% if current_user %>
    Signed in as <%= current_user.name %>
    <%= link_to "Logout", logout_path %>
  <% else %>
    <%= link_to "Sign in with Twitter", "/auth/twitter"%>
  <% end %>

  <% @tweets.each do |tweet| -%>

		<div class="media">
		  <a class="pull-left" href="#">
		    <img class="media-object" src="<%= tweet.user.profile_image_url-%>" alt="...">
		  </a>
		  <div class="media-body">
		    <h4 class="media-heading"><%= tweet.user.name -%> <small>@<%= tweet.user.screen_name -%></small></h4>
		    <%= tweet.text -%>
		  </div>
		</div>
  	

  <%- end -%>

<%= @tweets.count -%>
  <%= @tweets.inspect -%>
