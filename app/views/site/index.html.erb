

 <%- if !current_user -%>
 <div class="container" style="margin-top:60px;text-align:center;">
        <h1 style="color: #efefef;font-weight: 300;letter-spacing: 1px;text-transform: uppercase;text-align:center;font-size:40px;">A Magical Twitter Search App</h1>
        <p class="lead" style="color:#aaa">Search for tweets. 20 at a time.</p>
        <div style="margin-top:40px;">


				<%= link_to "Sign in with Twitter", "/auth/twitter", class: 'btn btn-primary btn-lg', style: 'width:300px;margin-top:50px;'%>


        <br/><small style="color:#aaa;">We'll redirect you to Twitter</small></div>
      </div>
  <% else %>



 	 <form class="navbar-form navbar-left" role="search" action="/" method="get">
      <div class="form-group">
        <input type="text" class="form-control" name="q" placeholder="Search for tweets" style="width:300px;">
      </div>
      <button type="submit" class="btn btn-default">Search</button>
    </form><br/>

<div style="clear:both"><br/><hr/></div>

<h1>20 tweets for <em><%= @query -%></em></h1>

<%- @tweets.each do |tweet| -%>
<div class="media">
  <a class="pull-left" href="#">
    <img class="media-object" src="<%= tweet.user.profile_image_url-%>" alt="...">
  </a>
  <div class="media-body">
    <h4 class="media-heading"><%= tweet.user.name -%> <small><%= link_to "@#{tweet.user.screen_name}", "/tweets/#{tweet.user.screen_name}" -%></small></h4>
    <%= tweet.text -%>
  </div>
</div>
<%- end -%>

<%= @tweets.class -%>
  <%= @tweets.inspect -%>
  <%- end -%>
